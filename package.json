{
  "name": "gaznetcad-ui",
  "version": "2.0.0",
  "description": "Modern interactive UI for GazNetCAD gas distribution network design platform",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:e2e": "playwright test",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "deploy": "npm run build:gh-pages && node deploy.js",
    "deploy:cjs": "npm run build:gh-pages && node deploy.cjs",
    "deploy:ps": "powershell -ExecutionPolicy Bypass -File deploy.ps1",
    "build:gh-pages": "cross-env NODE_ENV=production npm run build"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.0.2",
    "@vueuse/core": "^10.7.0",
    "@vueuse/motion": "^2.0.0",
    "chart.js": "^4.4.0",
    "gsap": "^3.12.2",
    "html2canvas": "^1.4.1",
    "lucide-vue-next": "^0.294.0",
    "pinia": "^2.1.7",
    "pinia-plugin-persistedstate": "^3.2.1",
    "three": "^0.159.0",
    "vue": "^3.4.0",
    "vue-chartjs": "^5.3.0",
    "vue-i18n": "^9.8.0",
    "vue-router": "^4.2.5"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@storybook/vue3": "^7.6.0",
    "@storybook/vue3-vite": "^7.6.0",
    "@types/html2canvas": "^0.5.35",
    "@types/node": "^20.10.0",
    "@types/three": "^0.159.0",
    "@vitejs/plugin-vue": "^4.5.2",
    "cross-env": "^7.0.3",
    "gh-pages": "^6.3.0",
    "sass": "^1.69.5",
    "typescript": "^5.3.3",
    "unplugin-auto-import": "^0.17.2",
    "unplugin-vue-components": "^0.25.2",
    "vite": "^5.4.10",
    "vitest": "^1.0.4",
    "vue-tsc": "^2.0.29"
  },
  "keywords": [
    "gas-network",
    "engineering",
    "vue3",
    "3d-visualization",
    "pipeline-design"
  ],
  "author": "GazNetCAD Team",
  "license": "MIT"
}
